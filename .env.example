# ==================== SERVER CONFIGURATION ====================
NODE_ENV=production
PORT=3000

# ==================== SESSION CONFIGURATION ====================
# IMPORTANT: Change this to a long random string in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-session-secret-here

# ==================== SUPABASE CONFIGURATION ====================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# IMPORTANT: For backend operations (recommended for production)
# Get service key from: https://app.supabase.com/project/_/settings/api
# NEVER expose this in client-side code or commit to public repos!
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ==================== CLOUDINARY CONFIGURATION ====================
# For image uploads using unsigned upload (no API key/secret needed in frontend)
# Setup: Cloudinary Dashboard > Settings > Upload > Add upload preset > Enable unsigned
# Get these from: https://console.cloudinary.com/console
CLOUDINARY_CLOUD_NAME=dl6xk437w
CLOUDINARY_UPLOAD_PRESET=selisih_berat
CLOUDINARY_FOLDER=selisih_berat

# Optional: Only needed for backend/admin operations (keep these for backward compatibility)
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ==================== GOOGLE SHEETS API CONFIGURATION ====================
# Optional: For Google Sheets integration
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
SPREADSHEET_ID=your-spreadsheet-id

# ==================== SECURITY ====================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==================== RATE LIMITING ====================
# Optional: Configure rate limits
# LOGIN_RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
# LOGIN_RATE_LIMIT_MAX=5          # Max attempts
# API_RATE_LIMIT_WINDOW=60000     # 1 minute in ms
# API_RATE_LIMIT_MAX=30           # Max requests

# ==================== JWT CONFIGURATION ====================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
